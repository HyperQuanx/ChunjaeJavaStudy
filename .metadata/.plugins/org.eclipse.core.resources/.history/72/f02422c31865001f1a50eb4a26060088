package chap4;

public class gugudanss {

    public static void main(String[] args) {
        // 단의 제목과 계산 결과를 출력하는 for문
        for (int j = 0; j <= 9; j++) {
            for (int i = 2; i <= 9; i++) {
                if (j == 0) {
                    // 첫 번째 줄은 단 제목 출력
                    if (i <= 5) {
                        System.out.print(String.format("%9s", i + "단"));
                    } else if (i == 6) {
                        System.out.println();
                        System.out.print(String.format("%9s", i + "단"));
                    } else {
                        System.out.print(String.format("%9s", i + "단"));
                    }
                } else {
                    // 그 외의 줄은 구구단 계산 결과 출력
                    if (i <= 5) {
                        System.out.print(String.format("%9s", i + "X" + j + "= " + i * j));
                    } else if (i == 6) {
                        System.out.println();
                        System.out.print(String.format("%9s", i + "X" + j + "= " + i * j));
                    } else {
                        System.out.print(String.format("%9s", i + "X" + j + "= " + i * j));
                    }
                }
            }
            System.out.println();
        }
    }
}
