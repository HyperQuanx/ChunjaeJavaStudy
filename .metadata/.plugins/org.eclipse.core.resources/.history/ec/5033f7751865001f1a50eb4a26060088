package chap4;

public class gugudanss {

    public static void main(String[] args) {
        // 첫 번째 for문: 각 단을 순서대로 출력
        for (int j = 0; j <= 9; j++) {
            // 2단부터 5단까지 출력
            for (int i = 2; i <= 9; i++) {
                if (j == 0) {
                    // 단 제목 출력
                    System.out.print(String.format("%9s", i + "단"));
                } else {
                    // 구구단 출력
                    System.out.print(String.format("%10s", i + "X" + j + "= " + i * j));
                }
                if (i == 5) { // 5단 출력 후 줄 바꿈
                    System.out.println();
                }
            }
            // 9단까지 출력한 후 줄 바꿈
            if (j > 0) {
                System.out.println();
            }
        }
    }
}
