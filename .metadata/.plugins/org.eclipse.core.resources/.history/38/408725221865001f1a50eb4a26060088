package chap4;

public class gugudanss {

    public static void main(String[] args) {
        // 2단부터 5단까지 한 줄로 출력
        for (int j = 0; j <= 9; j++) {
            for (int i = 2; i <= 5; i++) {
                if (j == 0) {
                    System.out.print(String.format("%9s", i + "단"));
                    if (i == 5) {
                        System.out.println();
                    }
                } else {
                    System.out.print(String.format("%10s", i + "X" + j + "= " + i * j));
                    if (i == 5) {
                        System.out.println();
                    }
                }
            }
        }

        System.out.println();  // 줄바꿈

        // 6단부터 9단까지 한 줄로 출력
        for (int j = 0; j <= 9; j++) {
            for (int i = 6; i <= 9; i++) {
                if (j == 0) {
                    System.out.print(String.format("%9s", i + "단"));
                    if (i == 9) {
                        System.out.println();
                    }
                } else {
                    System.out.print(String.format("%10s", i + "X" + j + "= " + i * j));
                    if (i == 9) {
                        System.out.println();
                    }
                }
            }
        }
    }
}
